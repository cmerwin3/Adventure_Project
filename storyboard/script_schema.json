{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Schema to validate script files and formatting",

    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "script_id": { "type": "string"},
            "background": { "type": "string"},
            "npc_list": {
                "type": "array",
                "items": { 
                    "type": "string",
                    "enum": [ "Goblin", "Orc" ]
                 },
                "maxItems": 6
            },
            "prompt": { "type": "string"},
            "responses": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "response": { "type": "string"},
                        "next_script": { 
                            "type": "string",
                            "enum": [""]
                        },
                        "combat_mode": { 
                            "type": "object",
                            "properties": {
                                "npc_list": {
                                    "type": "array",
                                    "items": { 
                                        "type": "string",
                                        "enum": [ "Goblin", "Orc" ]
                                     },
                                    "maxItems": 6
                                },
                                "background": { "type": "string"}
                            },
                            "required": [ "npc_list", "background" ]
                        },
                        "action": {
                            "type": "string",
                            "enum": [ "get_item", "use_item" ]
                        },
                        "item_name": { 
                            "type": "string",
                            "enum": [ "Golden Key", "Red Key" ]
                        },
                        "required_script_id": { "type": "string"},
                        "show_if_missing": { "type": "boolean"},
                        "required_item": { "type": "string"},
                        "narration": { "type": "string"}
                    },
                    "required": [ "response", "next_script" ],
                    "additionalProperties": false
                },
                "maxItems": 6
            }
        },
        "required": [ "script_id", "background", "npc_list", "prompt", "responses" ],
        "additionalProperties": false
    }
}
